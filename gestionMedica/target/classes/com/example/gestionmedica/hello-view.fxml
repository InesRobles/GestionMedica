<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER"
      prefHeight="260.0"
      prefWidth="340.0"
      spacing="18.0"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.gestionmedica.controllers.HelloController">

    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <stylesheets>
        <URL value="@/css/login.css"/>
    </stylesheets>

    <AnchorPane prefHeight="220.0" prefWidth="300.0">
        <children>

            <Label layoutX="125.0" layoutY="10.0" text="Login">
                <font><Font size="22.0"/></font>
            </Label>

            <TextField fx:id="txtUsuario"
                       layoutX="40.0" layoutY="60.0"
                       prefWidth="220.0"
                       promptText="Usuario"/>

            <PasswordField fx:id="txtPassword"
                           layoutX="40.0" layoutY="105.0"
                           prefWidth="220.0"
                           promptText="Contraseña"/>

            <Button layoutX="90.0" layoutY="155.0"
                    prefWidth="140.0"
                    text="Iniciar sesión"
                    onAction="#onHelloButtonClick"/>

            <Label fx:id="lblMensaje"
                   layoutX="40.0" layoutY="195.0"
                   prefWidth="220.0"
                   text=""/>

        </children>
    </AnchorPane>

</VBox>
