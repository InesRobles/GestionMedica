<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="350.0" spacing="20.0"
      xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.gestionmedica.controllers.HelloController"
      style="-fx-background-color: #f0f4f8;">

    <padding>
        <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
    </padding>

    <Label text="Sistema de Gestión Médica" textAlignment="CENTER">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>

    <Label text="Iniciar Sesión" textAlignment="CENTER" style="-fx-text-fill: #555;">
        <font>
            <Font size="14.0" />
        </font>
    </Label>

    <TextField fx:id="usuarioField" promptText="Usuario" maxWidth="250" />

    <PasswordField fx:id="passwordField" promptText="Contraseña" maxWidth="250" />

    <Button fx:id="loginButton" text="Iniciar Sesión" onAction="#onHelloButtonClick"
            prefWidth="250" prefHeight="35"
            style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14;" />

</VBox>
