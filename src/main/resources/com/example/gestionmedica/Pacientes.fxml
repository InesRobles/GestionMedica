<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.gestionmedica.controllers.PacientesController">

    <!-- Top: Barra de navegación -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #4CAF50; -fx-padding: 15;">
            <Button text="← Volver" onAction="#volverAlDashboard"
                    style="-fx-background-color: white; -fx-text-fill: #4CAF50; -fx-font-weight: bold;" />
            <Label text="Gestión de Pacientes" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
        </HBox>
    </top>

    <!-- Center: Tabla y formulario -->
    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
            <!-- Tabla de pacientes -->
            <TableView fx:id="tablaPacientes" prefHeight="300">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50" />
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="150" />
                    <TableColumn fx:id="colApellidos" text="Apellidos" prefWidth="150" />
                    <TableColumn fx:id="colDni" text="DNI" prefWidth="100" />
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="180" />
                    <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="120" />
                </columns>
            </TableView>

            <!-- Formulario -->
            <HBox spacing="20" alignment="CENTER">
                <VBox spacing="8">
                    <Label text="Nombre:" />
                    <TextField fx:id="txtNombre" promptText="Nombre" prefWidth="180" />
                </VBox>
                <VBox spacing="8">
                    <Label text="Apellidos:" />
                    <TextField fx:id="txtApellidos" promptText="Apellidos" prefWidth="180" />
                </VBox>
                <VBox spacing="8">
                    <Label text="DNI:" />
                    <TextField fx:id="txtDni" promptText="DNI" prefWidth="120" />
                </VBox>
                <VBox spacing="8">
                    <Label text="Email:" />
                    <TextField fx:id="txtEmail" promptText="Email" prefWidth="180" />
                </VBox>
                <VBox spacing="8">
                    <Label text="Teléfono:" />
                    <TextField fx:id="txtTelefono" promptText="Teléfono" prefWidth="120" />
                </VBox>
            </HBox>

            <!-- Botones de acción -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Agregar" onAction="#agregarPaciente"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;" prefWidth="100" />
                <Button text="Actualizar" onAction="#actualizarPaciente"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white;" prefWidth="100" />
                <Button text="Eliminar" onAction="#eliminarPaciente"
                        style="-fx-background-color: #f44336; -fx-text-fill: white;" prefWidth="100" />
                <Button text="Limpiar" onAction="#limpiarCampos"
                        style="-fx-background-color: #9E9E9E; -fx-text-fill: white;" prefWidth="100" />
            </HBox>
        </VBox>
    </center>

</BorderPane>
